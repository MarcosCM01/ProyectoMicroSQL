
@{
    ViewBag.Title = "Personalizar";
}

<h2>Personalizar Diccionario</h2>

<p>
    @Html.ActionLink("Regresar a Menu Principal", "Menu")
</p>

<p style="color:red;">@ViewBag.Error</p>

@using (Html.BeginForm("Personalizar", "Home", FormMethod.Post))
{
    <p>Palabra reservada a modificar:</p>
    <input type="text" name="Llave" id="Llave" />

    <p>Nueva palabra reservada en otro idioma:</p>
    <input type="text" name="NuevaPalabra" id="NuevaPalabra" />
    <br />
    <input type="submit" value="Modificar" class="btn btn-outline-success" />
}

<table class="table table-hover">
    <tr class="table">
        <th>
            PALABRA RESERVADA
        </th>
        <th>
            PALABRA RESERVADA EN OTRO IDIOMA
        </th>
    </tr>

    @foreach (var item in ProyectoMicroSQL.Singleton.Data.Instancia.PalabrasReservadas)
    {
        <tr class="table">
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
    }
</table>