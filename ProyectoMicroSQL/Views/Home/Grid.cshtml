
@{
    ViewBag.Title = "Grid";
}

<h2>Grid</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @foreach (var item in ProyectoMicroSQL.Singleton.Data.Instancia.Arboles[ProyectoMicroSQL.Singleton.Data.Instancia.nombreTabla].ListaVariables)
        {
            <th>@item</th>
        }
    </tr>
        
        @foreach (var item in ProyectoMicroSQL.Singleton.Data.Instancia.listaNodos)
        {
                for (int i = 0; i < item.Valores.Count; i++)
                {
                <tr>
                    @for (int j = 0; j < item.Valores[i].Valores.Count; j++)
                    {
                        <td>
                        @item.Valores[i].Valores[j]
                        </td>
                    }
                </tr>
                }
        }

    </table>
